# ================================================
# PDD Generator Environment Variables Template
# ================================================
# Copy this file to .env and fill in your values
# DO NOT commit the actual .env file to version control
# ================================================

# ================================================
# REQUIRED: OpenAI API Configuration
# ================================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
# Alternative: Azure OpenAI
# OPENAI_API_BASE=https://your-resource.openai.azure.com/

# ================================================
# Application Settings
# ================================================
APP_ENV=production  # Options: development, staging, production
APP_DEBUG=false
APP_LOG_LEVEL=INFO

# ================================================
# Server Configuration
# ================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=4

# ================================================
# LLM Model Configuration
# ================================================
# Model for PDD generation, refinement, chat
OPENAI_MODEL=gpt-4o  # Options: gpt-4o, gpt-4-turbo, gpt-3.5-turbo

# Model temperature (0.0 = deterministic, 1.0 = creative)
OPENAI_TEMPERATURE=0.0

# Model for audio/video transcription
WHISPER_MODEL=whisper-1

# ================================================
# Rate Limiting
# ================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PDD_GENERATION=10/minute
RATE_LIMIT_FILE_UPLOAD=5/minute
RATE_LIMIT_REFINE=20/minute
RATE_LIMIT_CHAT=30/minute

# ================================================
# CORS Settings
# ================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-production-domain.com

# ================================================
# File Processing
# ================================================
MAX_FILE_SIZE_MB=100
TEMP_DIR=/tmp

# ================================================
# Logging
# ================================================
LOG_LEVEL=INFO
LOG_FORMAT=json  # Options: json, text
LOG_REQUESTS=true
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/app.log

# ================================================
# Feature Flags
# ================================================
FEATURE_VIDEO_PROCESSING=true
FEATURE_DOCUMENT_PROCESSING=true
FEATURE_DIAGRAM_GENERATION=true
FEATURE_AI_REFINEMENT=true
FEATURE_EXPORT_PDF=true
FEATURE_CHAT_ASSISTANT=true

# ================================================
# Optional: Redis for Rate Limiting (Distributed Systems)
# ================================================
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=

# ================================================
# Optional: Database (Future Feature)
# ================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/pddgenerator
# DATABASE_POOL_SIZE=10

# ================================================
# Optional: Monitoring (Future Features)
# ================================================
# SENTRY_DSN=your-sentry-dsn-here
# DATADOG_API_KEY=your-datadog-key-here
# PROMETHEUS_ENABLED=false

# ================================================
# Optional: Custom API Base URLs
# ================================================
# FRONTEND_URL=http://localhost:3000  # For CORS and redirects
# API_BASE_URL=http://localhost:8000
